@model BaverGame.Application.DTOs.UserRoleDto

@{
    ViewData["Title"] = "Delete particular user role";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Delete particular user role</h1>

    <form asp-action="Delete" method="post">
        <div class="form-group" hidden="hidden">
            <label asp-for="RoleId" class="my-2">Removed role's ID</label>
            <input type="text" asp-for="RoleId" class="form-control w-50 my-2" required="required" value="@Model.RoleId"/>
            <span asp-validation-for="RoleId" class="text-danger my-2"></span>
        </div>

        <h2 class="mt-2">Are you sure you want to delete @Model.RoleName from the base?</h2>
        <button type="submit" class="btn btn-danger my-2">Delete</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>