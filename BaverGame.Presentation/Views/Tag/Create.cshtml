@model BaverGame.Application.DTOs.TagDto

@{
    ViewBag.Title = "Create new tag";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Create a new tag</h1>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="TagName" class="my-2">Tag's name</label>
            <input asp-for="TagName" class="form-control my-2 w-100" required="required" minlength="3"/>
            <span asp-validation-for="TagName" class="text-danger my-2"></span>
        </div>
        <button type="submit" class="btn btn-primary my-2">Create</button>
    </form>
    <a asp-action="Index" class="mt-2">Back to List</a>
</div>