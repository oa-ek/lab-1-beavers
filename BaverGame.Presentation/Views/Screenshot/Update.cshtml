@model BaverGame.Application.DTOs.ScreenshotDto

@{
    ViewData["Title"] = "Update particular screenshot";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Update particular screenshot</h1>

    <form asp-action="Update" method="post">
        <div class="form-group" hidden="hidden">
            <label asp-for="ScreenshotId">Screenshot's ID</label>
            <input asp-for="ScreenshotId" class="form-select w-100" required="required"/>
            <span asp-validation-for="ScreenshotId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="GameId">Game</label>
            <select asp-for="GameId" asp-items="@(ViewData["Games"] as SelectList)" class="form-select w-100 my-2" required="required">
                <option value="">Select value</option>
            </select>
            <span asp-validation-for="GameId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl">Image url</label>
            <input asp-for="ImageUrl" class="form-control w-100 my-2" required="required"/>
            <span asp-validation-for="ImageUrl" class="text-danger my-2"></span>
        </div>

        <button type="submit" class="btn btn-primary my-2">Save</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>
