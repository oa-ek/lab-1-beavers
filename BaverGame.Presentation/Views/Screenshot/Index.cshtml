@using Microsoft.IdentityModel.Tokens
@model IEnumerable<BaverGame.Domain.Entities.Screenshot>

@{
    ViewData["Title"] = "Screenshots";
}

<div class="mx-4 h-auto my-4 w-100 text-center">
    <h1>Screenshots</h1>

    <div class="mt-3">
        <div class="flex-row mb-2">
            <button type="button" class="btn btn-dark m-2">
                <a class="text-decoration-none" asp-area="" asp-controller="Screenshot" asp-action="Create">Create</a>
            </button>
        </div>
        @if (!Model.IsNullOrEmpty())
        {
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Game</th>
                        <th>Url</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var screenshot in Model)
                    {
                        <tr>
                            <td>@screenshot.Game.Name</td>
                            <td>@screenshot.ImageUrl</td>
                            <td>
                                <button type="button" class="btn btn-dark">
                                    <a class="text-decoration-none" asp-area="" asp-controller="Screenshot" asp-route-id="@screenshot.ScreenshotId" asp-action="Update">Update</a>
                                </button>
                            </td>
                            <td>
                                <button type="button" class="btn btn-dark">
                                    <a class="text-decoration-none" asp-area="" asp-controller="Screenshot" asp-route-id="@screenshot.ScreenshotId" asp-action="Delete">Delete</a>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Screenshots were found!</p>
        }
    </div>
    <a asp-controller="AdminPanel" asp-action="Index" class="mt-2">Back to admin-panel</a>
</div>
