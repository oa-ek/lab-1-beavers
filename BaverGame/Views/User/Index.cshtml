@using Microsoft.IdentityModel.Tokens
@model IEnumerable<Core.User>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="mt-3">
    <div class="flex-row mb-2">
        <button>
            <a class="text-decoration-none" asp-area="" asp-controller="User" asp-action="Create">Create</a>
        </button>
    </div>
    @if (!Model.IsNullOrEmpty())
    {
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.UserRole.RoleName</td>
                    <td>
                        <button>
                            <a class="text-decoration-none" asp-area="" asp-controller="User" asp-route-id="@user.UserId" asp-action="Update">Update</a>
                        </button>
                    </td>
                    <td>
                        <button>
                            <a class="text-decoration-none" asp-area="" asp-controller="User" asp-route-id="@user.UserId" asp-action="Delete">Delete</a>
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No users were found!</p>
    }
</div>
<a asp-controller="AdminPanel" asp-action="Index" class="mt-2">Back to admin-panel</a>