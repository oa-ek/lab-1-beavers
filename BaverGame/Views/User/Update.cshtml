@model BaverGame.DTOs.UserDto

@{
    ViewData["Title"] = "Update particular user role";
}

<h1>Update particular user role</h1>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="UserId">User's ID</label>
        <input asp-for="UserId" class="form-control w-50" />
    </div>
    
    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control w-50" />
    </div>
    
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control w-50"/>
    </div>
    
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control w-50"/>
    </div>
    
    <div class="form-group">
        <label asp-for="RoleId">User's role ID</label>
        <input asp-for="RoleId" class="form-control w-50"/>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

<a asp-action="Index" class="mt-2">Back to List</a>