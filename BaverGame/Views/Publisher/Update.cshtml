@model BaverGame.DTOs.PublisherDto

@{
    ViewData["Title"] = "Update particular publisher";
}


<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Update particular publisher</h1>

    <form asp-action="Update" method="post">

        <div class="form-group" hidden="hidden">
            <label asp-for="PublisherId" class="my-2">Publisher's ID</label>
            <input type="text" asp-for="PublisherId" class="form-control w-100 my-2" required="required" value="@Model.PublisherId"/>
            <span asp-validation-for="PublisherId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="PublisherName" class="my-2">Publisher's name</label>
            <input asp-for="PublisherName" class="form-control w-100 my-2" required="required"/>
            <span asp-validation-for="PublisherName" class="text-danger my-2"></span>
        </div>

        <button type="submit" class="btn btn-primary my-2">Save</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>