@model BaverGame.DTOs.PublisherDto

@{
    ViewData["Title"] = "Update particular publisher";
}

<h1>Update particular publisher</h1>

<form asp-action="Update" method="post">

    <div class="form-group" hidden="hidden">
        <label asp-for="PublisherId"></label>
        <input type="text" asp-for="PublisherId" class="form-control w-50" required="required" value="@Model.PublisherId"/>
        <span asp-validation-for="PublisherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PublisherName"></label>
        <input asp-for="PublisherName" class="form-control w-50" required="required"/>
        <span asp-validation-for="PublisherName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

<a asp-action="Index" class="mt-2">Back to List</a>