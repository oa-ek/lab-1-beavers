@model BaverGame.DTOs.PublisherDto

@{
    ViewData["Title"] = "Delete particular publisher";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Delete particular publisher</h1>

    <form asp-action="Delete" method="post">
        <div class="form-group" hidden="hidden" value="@Model.PublisherId">
            <label asp-for="PublisherId" class="my-2">Removed publisher's ID</label>
            <input type="text" asp-for="PublisherId" class="form-control w-100 my-2" required="required"/>
            <span asp-validation-for="PublisherId" class="text-danger my-2"></span>
        </div>
        <h2 class="mt-2">Are you sure you want to delete @Model.PublisherName from the base?</h2>
        <button type="submit" class="btn btn-danger my-2">Delete</button>
    </form>
    <a asp-action="Index" class="mt-2">Back to List</a>
</div>