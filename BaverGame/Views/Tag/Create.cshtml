@model BaverGame.DTOs.TagDto

@{
    ViewBag.Title = "Create new tag";
    Layout = "_Layout";
}

<h1>Create a new tag</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="TagName">Tag's name</label>
        <input asp-for="TagName" class="form-control w-50" required="required" minlength="3"/>
        <span asp-validation-for="TagName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
</form>
<a asp-action="Index" class="mt-2">Back to List</a>