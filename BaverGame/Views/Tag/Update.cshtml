@model BaverGame.DTOs.TagDto

@{
    ViewData["Title"] = "Update particular tag";
}

<h1>Update particular tag</h1>

<form asp-action="Update" method="post">

    <div class="form-group">
        <label asp-for="TagId"></label>
        <input type="text" asp-for="TagId" class="form-control w-50" required="required"/>
        <span asp-validation-for="TagId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TagName"></label>
        <input asp-for="TagName" class="form-control w-50" required="required" minlength="3"/>
        <span asp-validation-for="TagName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

<a asp-action="Index" class="mt-2">Back to List</a>