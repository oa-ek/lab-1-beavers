@model BaverGame.DTOs.GameDto

@{
    ViewData["Title"] = "Delete particular game";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Delete particular game</h1>

    <form asp-action="Delete" method="post">
        <div class="form-group my-2" hidden="hidden" value="@Model.GameId">
            <label asp-for="GameId">Removed game's ID</label>
            <input type="text" asp-for="GameId" class="form-control w-100 my-2" required="required"/>
            <span asp-validation-for="GameId" class="text-danger my-2"></span>
        </div>

        <h2 class="mt-2">Are you sure you want to delete @Model.Name from the base?</h2>

        <button type="submit" class="btn btn-danger my-2">Delete</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>
