@model BaverGame.DTOs.GameDto

@{
    ViewData["Title"] = "Delete particular game";
}

<h1>Delete particular game</h1>

<form asp-action="Delete" method="post">
    <div class="form-group" hidden="hidden" value="@Model.GameId">
        <label asp-for="GameId">Removed game's ID</label>
        <input type="text" asp-for="GameId" class="form-control w-50" required="required"/>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>
    <h2 class="mt-2">Are you sure you want to delete @Model.Name from the base?</h2>
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
</form>
<a asp-action="Index" class="mt-2">Back to List</a>