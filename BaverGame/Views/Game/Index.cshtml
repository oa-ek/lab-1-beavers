@using Microsoft.IdentityModel.Tokens
@model IEnumerable<Core.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<div class="mt-3">
    <div class="flex-row mb-2">
        <button>
            <a class="text-decoration-none" asp-area="" asp-controller="Game" asp-action="Create">Create</a>
        </button>
        @if (!Model.IsNullOrEmpty())
        {
            <button>
                <a class="text-decoration-none" asp-area="" asp-controller="Game" asp-action="Update">Update</a>
            </button>
            <button>
                <a class="text-decoration-none" asp-area="" asp-controller="Game" asp-action="Delete">Delete</a>
            </button>
        }
    </div>
    @if (!Model.IsNullOrEmpty())
    {
        <table class="table table-striped">
            <thead class="thead-dark">
            <tr>
                <th>Game's ID</th>
                <th>Developer's name</th>
                <th>Publisher's name</th>
                <th>Game's name</th>
                <th>Description</th>
                <th>System requirements</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var game in Model)
            {
                <tr>
                    <td>@game.GameId</td>
                    <td>@game.Developer.DeveloperName</td> 
                    <td>@game.Publisher.PublisherName</td>
                    <td>@game.Name</td>
                    <td>@game.Description</td> 
                    <td>@game.SystemRequirements</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No games were found!</p>
    }
</div>
<a asp-controller="AdminPanel" asp-action="Index" class="mt-2">Back to admin-panel</a>
