@model BaverGame.DTOs.GameDto

@{
    ViewBag.Title = "Create new game";
    Layout = "_Layout";
}

<h1>Create a new game</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DeveloperId">Developer</label>
        <select asp-for="DeveloperId" asp-items="@(ViewData["Developers"] as SelectList)" class="form-control w-50" required="required">
            <option value="">Select value</option>
        </select>
        <span asp-validation-for="DeveloperId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublisherId">Publisher</label>
        <select asp-for="PublisherId" asp-items="@(ViewData["Publishers"] as SelectList)" class="form-control w-50" required="required">
            <option value="">Select value</option>
        </select>
        <span asp-validation-for="PublisherId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name">Game's name</label>
        <input asp-for="Name" class="form-control w-50" required="required" minlength="3"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Game's description</label>
        <input asp-for="Description" class="form-control w-50" required="required" minlength="3"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SystemRequirements">Game's system requirements</label>
        <input asp-for="SystemRequirements" class="form-control w-50" required="required" minlength="3"/>
        <span asp-validation-for="SystemRequirements" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
</form>
<a asp-action="Index" class="mt-2">Back to List</a>