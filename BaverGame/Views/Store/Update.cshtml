@model BaverGame.DTOs.StoreDto

@{
    ViewData["Title"] = "Update particular store";
}

<h1>Update particular store</h1>

<form asp-action="Update" method="post">

    <div class="form-group">
        <label asp-for="StoreId"></label>
        <input type="text" asp-for="StoreId" class="form-control w-50" required="required"/>
        <span asp-validation-for="StoreId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StoreName"></label>
        <input asp-for="StoreName" class="form-control w-50" required="required" minlength="3"/>
        <span asp-validation-for="StoreName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

<a asp-action="Index" class="mt-2">Back to List</a>