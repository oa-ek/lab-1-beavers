@model BaverGame.DTOs.PriceDto

@{
    ViewData["Title"] = "Update particular price";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Update particular price</h1>

    <form asp-action="Update" method="post">
        <div class="form-group" hidden="hidden">
            <label asp-for="PriceId">PriceId</label>
            <input type="text" asp-for="PriceId" class="form-control w-100 my-2" required="required" value="@Model.PriceId"/>
            <span asp-validation-for="PriceId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="GameId">Game</label>
            <select asp-for="GameId" asp-items="@(ViewData["Games"] as SelectList)" class="form-select w-100 my-2" required="required">
                <option value="">Select value</option>
            </select>
            <span asp-validation-for="GameId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="StoreId">Store</label>
            <select asp-for="StoreId" asp-items="@(ViewData["Stores"] as SelectList)" class="form-select w-100 my-2" required="required">
                <option value="">Select value</option>
            </select>
            <span asp-validation-for="StoreId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceValue">Price</label>
            <input asp-for="PriceValue" class="form-control w-100 my-2" required="required"/>
            <span asp-validation-for="PriceValue" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="PriceUrl">Price url</label>
            <input asp-for="PriceUrl" class="form-control w-100 my-2" required="required"/>
            <span asp-validation-for="PriceUrl" class="text-danger my-2"></span>
        </div>

        <button type="submit" class="btn btn-primary my-2">Save</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>
