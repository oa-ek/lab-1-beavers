@model BaverGame.DTOs.GameTagDto

@{
    ViewData["Title"] = "Update particular game tag";
}

<h1>Update particular game tag</h1>

<form asp-action="Update" method="post">

    <div class="form-group">
        <label asp-for="GameTagId"></label>
        <input type="text" asp-for="GameTagId" class="form-control w-50" required="required"/>
        <span asp-validation-for="GameTagId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="TagId"></label>
        <input type="text" asp-for="TagId" class="form-control w-50" required="required"/>
        <span asp-validation-for="TagId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameId"></label>
        <input type="text" asp-for="GameId" class="form-control w-50" required="required"/>
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Save</button>
</form>

<a asp-action="Index" class="mt-2">Back to List</a>