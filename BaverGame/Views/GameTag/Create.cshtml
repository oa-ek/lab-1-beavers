@model BaverGame.DTOs.GameTagDto

@{
    ViewBag.Title = "Create new game tag";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Create a new tag</h1>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="GameId">Game</label>
            <select asp-for="GameId" asp-items="@(ViewData["Games"] as SelectList)" class="form-select w-100 my-2" required="required">
                <option value="">Select value</option>
            </select>
            <span asp-validation-for="GameId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="TagId">Tag</label>
            <select asp-for="TagId" asp-items="@(ViewData["Tags"] as SelectList)" class="form-select w-100 my-2" required="required">
                <option value="">Select value</option>
            </select>
            <span asp-validation-for="TagId" class="text-danger my-2"></span>
        </div>

        <button type="submit" class="btn btn-primary my-2">Create</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>
