@model BaverGame.DTOs.GameTagDto

@{
    ViewData["Title"] = "Delete particular game tag";
}

<h1>Delete particular game tag</h1>

<form asp-action="Delete" method="post">
    <div class="form-group" hidden="hidden" value="@Model.GameTagId">
        <label asp-for="GameTagId">Removed game tag's ID</label>
        <input type="text" asp-for="GameTagId" class="form-control w-50" required="required"/>
        <span asp-validation-for="GameTagId" class="text-danger"></span>
    </div>
    <h2 class="mt-2">Are you sure you want to delete this game tag from the base?</h2>
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
</form>
<a asp-action="Index" class="mt-2">Back to List</a>