@model BaverGame.DTOs.DeveloperDto

@{
    ViewData["Title"] = "Delete particular developer";
}

<h1>Delete particular developer</h1>

<form asp-action="Delete" method="post">
    <div class="form-group" hidden="hidden" value="@Model.DeveloperId">
        <label asp-for="DeveloperId">Removed developer's ID</label>
        <input type="text" asp-for="DeveloperId" class="form-control w-50" required="required"/>
        <span asp-validation-for="DeveloperId" class="text-danger"></span>
    </div>
    <h2 class="mt-2">Are you sure you want to delete @Model.DeveloperName from the base?</h2>
    <button type="submit" class="btn btn-danger mt-2">Delete</button>
</form>
<a asp-action="Index" class="mt-2">Back to List</a>