@model BaverGame.DTOs.DeveloperDto

@{
    ViewData["Title"] = "Update particular developer";
}

<div class="mx-4 h-auto my-4 w-100 text-center d-flex flex-column justify-content-center align-items-center">
    <h1>Update particular developer</h1>

    <form asp-action="Update" method="post">
        <div class="form-group" hidden="hidden">
            <label asp-for="DeveloperId">Developer's ID</label>
            <input type="text" asp-for="DeveloperId" class="form-control w-100 my-2" required="required" value="@Model.DeveloperId"/>
            <span asp-validation-for="DeveloperId" class="text-danger my-2"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeveloperName" class="my-2">Developer's name</label>
            <input asp-for="DeveloperName" class="form-control w-100 my-2" required="required" minlength="3"/>
            <span asp-validation-for="DeveloperName" class="text-danger my-2"></span>
        </div>

        <button type="submit" class="btn btn-primary my-2">Save</button>
    </form>

    <a asp-action="Index" class="mt-2">Back to List</a>
</div>
